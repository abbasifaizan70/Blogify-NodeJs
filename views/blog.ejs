<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Blog</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container mt-5">
      <h1>
        <%= blog.title %>
      </h1>
      <img src="<%= blog.coverImageURL %>" alt="" width="600px">
      <pre class="mt-5">
        <%= blog.body %>
      </pre>
    </div>

    <div class="container mt-5">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="30px">
      <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-5">
      <h1>
        Comments (<%= comments.length %>)
      </h1>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id%>" method="post">
          <div class="mb-3">
            <input type="text" class="form-control" name="content" placeholder="Enter your comment">
          </div>
          <div class="mb-3">
            <button type="submit" class="btn btn-info">Add Comment</button>
          </div>
        </form>
        <% } %>
    </div>

    <div class="container mt-5">
      <% comments.forEach(comment=> { %>
        <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="30px">
        <%= blog.createdBy.fullName %>
          <br />
          <%= comment.content %>
            <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>